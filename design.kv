<LoginScreen>
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            padding:15,15
            spacing:20,20
            Label:
                text:"User Login"
                font_size:'20sp'
            TextInput:
                id:username
                hint_text:"Username"
            TextInput:
                id:password
                hint_text:"Password"
                password:True
            RelativeLayout:
                Button:
                    text:"Login"
                    on_press:root.login(root.ids.username.text,root.ids.password.text)
                    size_hint: 0.3,0.8
                    pos_hint:{'center_x':0.5,'center_y':0.6}
            Label:
                id:wrong_login
                text:""

            Label:
                text:"App Developed by Shivani Pawar"
                color:0.1,0.7,1,1
        GridLayout:
            cols:2
            padding:10,10
            spacing:10,0
            size_hint:0.2,0.2
            Button:
                text:"Forgot Password?"
                background_color:1,1,1,0
                opacity: 1 if self.state== 'normal' else 0.5
                color:0.1,0.7,1,1
                on_press:root.for_pass()


            Button:
                text:"Sign Up"
                on_press:root.sign_up()
                background_color:1,1,1,0
                opacity: 1 if self.state== 'normal' else 0.5
                color:0.1,0.7,1,1
<ForPassScreen>:
    GridLayout:
        cols:1
        padding:20,20
        spacing:15,15
        Label:
            text:"Oooops Sorry! This tab is not in work now"
        Button:
            text:"Login page"
            on_press:root.sign_in()

<SignUpScreen>:
    GridLayout:
        cols:1
        padding:20,20
        spacing:20,20
        Label:
            text:"Welcome to Sign Up journey!!"
        TextInput:
            id:username
            hint_text:"Username"
        TextInput:
            id:password
            hint_text:"Password"
        Label:
            id:blank_field

        Button:

            text:"Submit"
            on_press:root.add_user(root.ids.username.text,root.ids.password.text)
            size_hint: 0.3,0.8
            pos_hint:{'center_x':0.5,'center_y':0.6}

<SignUpScreenSuccess>:
    GridLayout:
        cols:1
        Label:
            text:"Sign Up Successful!"
        Button:
            text:"Login page"
            on_press:root.sign_in()

<LoginScreenSuccess>:
    GridLayout:
        cols:1
        padding:30,30
        spacing:30,30
        RelativeLayout:
            ImageButton:
                on_press:root.log_out()
                source:'logout_hover.png' if self.hovered else "logout_nothover.png"
                size_hint: 0.35,0.35
                pos_hint:{'center_x':0.90,'center_y':0.85}
        Label:
            text:"How do you feel?"

        TextInput:
            id:feeling
            hint_text:"Things to try:happy,sad,unloved,angry,inspiring,depressed,fear..."
        Button:
            text:"Enlighten me!"
            on_press:root.get_quote(root.ids.feeling.text)
            size_hint: 0.5,0.8
            pos_hint:{'center_x':0.2,'center_y':0.2}
        Label:
            text:""
        ScrollView:
            Label:
                id:quote
                text:""
                text_size:self.width,None
                size_hint_y:None
                size_hint_y:None
                height:self.texture_size[1]
        Label:
            text:""

<RootWidget>:
    LoginScreen:
        name:"login_screen"
    SignUpScreen:
        name:"sign_up_screen"
    SignUpScreenSuccess:
        name:"sign_up_screen_success"
    LoginScreenSuccess:
        name:"Login_screen_success"
    ForPassScreen:
        name:"for_pass_screen"